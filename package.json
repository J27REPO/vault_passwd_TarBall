{
  "name": "gestor-contrasenas-seguro",
  "version": "1.0.0",
  "description": "Gestor de contraseñas local y seguro empaquetado con Electron.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --linux tar.gz"
  },
  "keywords": [
    "password",
    "manager",
    "security",
    "electron"
  ],
  "author": "Tu Nombre o Nickname",
  "license": "MIT",
  "devDependencies": {
    "electron": "^29.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.tu-dominio.gestorcontrasenaseguro",
    "productName": "Gestor de Contraseñas Seguro",
    "files": [ // Asegúrate de que 'files' no excluya la carpeta build si usas patrones restrictivos
      "main.js",
      "preload.js",
      "gestor_contrasenas.html",
      "build/icon.png" // Puedes incluirlo aquí si quieres que esté en el asar o para otros propósitos
    ],
    "linux": {
      "target": [
        "tar.gz"
      ],
      "category": "Utility;Security;",
      "icon": "build/icon.png", // Fuente del icono para electron-builder
      "extraFiles": [ // Esto copiará el icono a la raíz de la app desempaquetada
        {
          "from": "build/icon.png",
          "to": "icon.png"
        }
      ]
    }
  }
}
