{
  "name": "gestor-contrasenas-seguro",
  "version": "1.1.0",  
  "description": "Gestor de contraseñas local y seguro empaquetado con Electron.",
  "main": "src/main/main.js",  
  "scripts": {
    "start": "npm run build:react && electron .",
    "dev:react": "webpack serve --mode development",
    "build:react": "webpack --mode production",
    "dist": "npm run build:react && electron-builder --linux tar.gz"
  },
  "keywords": [
    "password",
    "manager",
    "security",
    "electron",
    "react"
  ],
  "author": "Tu Nombre o Nickname",
  "license": "MIT",
  "devDependencies": {
    "electron": "^29.0.0",
    "electron-builder": "^24.9.1",
    "@babel/core": "^7.24.0",  
    "@babel/preset-env": "^7.24.0",
    "@babel/preset-react": "^7.23.3",
    "babel-loader": "^9.1.3",
    "css-loader": "^7.1.1",
    "html-webpack-plugin": "^5.6.0",
    "style-loader": "^4.0.0",
    "webpack": "^5.90.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1" 
  }, 
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "build": {
    "appId": "com.tu-dominio.gestorcontrasenaseguro",
    "productName": "Gestor de Contraseñas Seguro",
    "files": [
      "dist_react/",  
      "src/main/",  
      "build/icon.png"
    ],
    "linux": {
      "target": [
        "tar.gz"
      ],
      "category": "Utility;Security;",
      "icon": "build/icon.png"
    },
    "directories": {
      "buildResources": "build",  
      "output": "release/" 
    }
  }
}